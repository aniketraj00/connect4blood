<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDonorProfilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/imgDonor"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:contentDescription="@string/user_icon"
                android:src="@drawable/user_icon" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/cardDonorProfilePic"
            android:layout_marginStart="22dp">

            <TextView
                android:id="@+id/txtDonorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donor_name_placeholder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/txtDonorAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_22"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comma"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:id="@+id/txtDonorGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtContactDonorLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_donor"
                android:textColor="@color/blue_700"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtReplaceDonorLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/replace_donor"
                android:textColor="@color/blue_700"
                android:textSize="14sp"/>



        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>